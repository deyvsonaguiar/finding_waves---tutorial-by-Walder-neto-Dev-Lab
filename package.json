{
  "name": "finding_waves",
  "version": "1.0.0",
  "description": "API Node JS with Typescript to finding waves on beaches around the world!",
  "scripts": {
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:functional": "jest --projects ./test --runInBand",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev --transpile-only src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix"
  },
  "keywords": [
    "api",
    "node",
    "typescript",
    "mongodb"
  ],
  "author": "Waldemar Neto - Deyvson Aguiar",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.2.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@types/express": "^4.17.17",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "module-alias": "^2.2.2"
  }
}
